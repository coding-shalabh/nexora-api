{
    "name": "crm360/tracker",
    "description": "CRM360 Visitor Tracking SDK for PHP - Track website visitors and link to CRM contacts",
    "version": "1.0.0",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "CRM360",
            "email": "support@crm360.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "suggest": {
        "illuminate/support": "Required for Laravel integration",
        "illuminate/http": "Required for Laravel middleware"
    },
    "autoload": {
        "psr-4": {
            "CRM360\\Tracker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CRM360\\Tracker\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "CRM360\\Tracker\\Laravel\\CRM360ServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
