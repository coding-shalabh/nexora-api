# ============================================
# NEXORA CRM - ENVIRONMENT CONFIGURATION
# ============================================

# --------------------------------------------
# Core Application Settings
# --------------------------------------------
NODE_ENV=development                    # development | staging | production
PORT=4000                               # API server port
DATABASE_URL=postgresql://user:password@host:port/database

# --------------------------------------------
# Environment Mode Configuration
# --------------------------------------------

# Demo Mode Settings
DEMO_MODE=true                          # Enable demo mode (uses demo tenant, auto-seeds data)
DEMO_TENANT_ID=demo-tenant-nexora       # Fixed tenant ID for demo mode
AUTO_SEED_DEMO=true                     # Auto-seed demo data on startup

# Demo Data Counts (number of records to generate)
DEMO_CONTACTS=100
DEMO_COMPANIES=50
DEMO_DEALS=75
DEMO_LEADS=60
DEMO_TASKS=200
DEMO_PROJECTS=20
DEMO_TICKETS=80
DEMO_PRODUCTS=30
DEMO_QUOTES=40
DEMO_CALENDAR_EVENTS=50
DEMO_INBOX_CONVERSATIONS=100
DEMO_NOTES=300
DEMO_ACTIVITIES=500

# Channels Mode Settings (independent from core mode)
CHANNELS_MODE=development               # development | staging | production

# WhatsApp Channel Configuration
WHATSAPP_ENABLED=true
WHATSAPP_BYPASS_MSG91=true              # Skip external MSG91 API (mock mode)
WHATSAPP_LOG_ONLY=true                  # Only log messages, don't send
WHATSAPP_SAVE_TO_INBOX=true             # Save mocked messages to inbox

# Email Channel Configuration
EMAIL_ENABLED=true
EMAIL_BYPASS_RESEND=true                # Skip external Resend API (mock mode)
EMAIL_BYPASS_MSG91=false                # Skip MSG91 email API
EMAIL_LOG_ONLY=true                     # Only log emails, don't send
EMAIL_SAVE_TO_INBOX=true                # Save mocked emails to inbox

# SMS Channel Configuration
SMS_ENABLED=true
SMS_BYPASS_FAST2SMS=true                # Skip Fast2SMS API
SMS_BYPASS_INFOBIP=true                 # Skip Infobip API
SMS_BYPASS_MSG91=true                   # Skip MSG91 SMS API
SMS_LOG_ONLY=true                       # Only log SMS, don't send
SMS_SAVE_TO_INBOX=true                  # Save mocked SMS to inbox

# Voice Channel Configuration
VOICE_ENABLED=false                     # Voice channel not yet implemented
VOICE_BYPASS_TELECMI=true               # Skip TeleCMI API
VOICE_LOG_ONLY=true                     # Only log calls, don't make

# --------------------------------------------
# JWT Authentication
# --------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# --------------------------------------------
# External Service API Keys
# --------------------------------------------

# MSG91 (WhatsApp, SMS, Email)
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_SENDER_ID=your-sender-id
MSG91_ROUTE=4
MSG91_WEBHOOK_SECRET=your-webhook-secret

# Resend (Email)
RESEND_API_KEY=your-resend-api-key

# Fast2SMS
FAST2SMS_API_KEY=your-fast2sms-api-key

# Infobip (SMS)
INFOBIP_API_KEY=your-infobip-api-key
INFOBIP_BASE_URL=https://api.infobip.com

# TeleCMI (Voice)
TELECMI_API_KEY=your-telecmi-api-key
TELECMI_APP_ID=your-telecmi-app-id

# --------------------------------------------
# Optional Services
# --------------------------------------------

# Redis (for queues and caching)
REDIS_URL=redis://localhost:6379

# S3/Object Storage (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=nexora-uploads

# --------------------------------------------
# Logging
# --------------------------------------------
LOG_LEVEL=info                          # debug | info | warn | error

# --------------------------------------------
# Rate Limiting
# --------------------------------------------
RATE_LIMIT_WINDOW_MS=900000             # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# --------------------------------------------
# CORS Configuration
# --------------------------------------------
ALLOWED_ORIGINS=https://nexoraos.pro,http://localhost:3000

# --------------------------------------------
# Development Tools
# --------------------------------------------
ENABLE_SWAGGER=true                     # Enable API documentation
ENABLE_DEBUG=false                      # Enable debug logs
